class Workout:
    def __init__(self, exercise, duration, calories_burned):
        self.exercise = exercise
        self.duration = duration
        self.calories_burned = calories_burned

workout_history = []
goal_calories = 0
goal_duration = 0

def record_workout():
    exercise = input("Enter exercise name: ")
    
    try:
        duration = int(input("Enter duration (minutes): "))
        calories = int(input("Enter calories burned: "))
    except ValueError:
        print("Invalid input! Please enter numbers for duration and calories.\n")
        return

    workout_history.append(Workout(exercise, duration, calories))
    print("Workout recorded successfully!\n")

def set_fitness_goal():
    global goal_calories, goal_duration

    try:
        goal_calories = int(input("Set daily calorie goal: "))
        goal_duration = int(input("Set daily workout duration goal (minutes): "))
    except ValueError:
        print("Invalid input! Please enter numbers.\n")
        return

    print("Fitness goal set successfully!\n")

def view_progress():
    if not workout_history:
        print("No workouts recorded yet.\n")
        return

    total_calories = sum(workout.calories_burned for workout in workout_history)
    total_duration = sum(workout.duration for workout in workout_history)

    print("\n===== Workout History =====")
    for workout in workout_history:
        print(f"{workout.exercise} - {workout.duration} min, {workout.calories_burned} cal")

    print(f"\nTotal Calories Burned: {total_calories} cal")
    print(f"Total Workout Time: {total_duration} min")

    if goal_calories or goal_duration:
        print("\n===== Progress Towards Goal =====")
        print(f"Calories Goal: {goal_calories} cal ({'✅ Achieved' if total_calories >= goal_calories else '❌ Not Achieved'})")
        print(f"Workout Time Goal: {goal_duration} min ({'✅ Achieved' if total_duration >= goal_duration else '❌ Not Achieved'})")

def main():
    while True:
        print("\n===== Fitness Tracker App =====")
        print("1. Record Workout")
        print("2. Set Fitness Goal")
        print("3. View Progress")
        print("4. Exit")
        choice = input("Enter choice: ")

        if choice == "1":
            record_workout()
        elif choice == "2":
            set_fitness_goal()
        elif choice == "3":
            view_progress()
        elif choice == "4":
            print("Goodbye!")
            break
        else:
            print("Invalid choice! Try again.\n")

if __name__ == "__main__":
    main()
